  <script>
    function alignWindowBackground() {
      const container = document.querySelector(".card-container");
      const windowEl = document.querySelector(".card-window") as HTMLElement;

      if (!container || !windowEl) return;

      const IMAGE_WIDTH = 682;
      const IMAGE_HEIGHT = 372;

      const containerRect = container.getBoundingClientRect();
      const windowRect = windowEl.getBoundingClientRect();

      const containerWidth = containerRect.width;
      const containerHeight = containerRect.height;

      const imageAspect = IMAGE_WIDTH / IMAGE_HEIGHT;
      const containerAspect = containerWidth / containerHeight;

      let renderedWidth, renderedHeight;

      if (containerAspect > imageAspect) {
        // Fill width, crop top/bottom
        renderedWidth = containerWidth;
        renderedHeight = containerWidth / imageAspect;
      } else {
        // Fill height, crop sides
        renderedHeight = containerHeight;
        renderedWidth = containerHeight * imageAspect;
      }

      const distanceFromLeft = windowRect.left - containerRect.left;

      windowEl.style.backgroundSize = `${renderedWidth}px ${renderedHeight}px`;
      windowEl.style.backgroundPosition = `-${distanceFromLeft}px -16px`;
    }

    window.addEventListener("load", alignWindowBackground);
    window.addEventListener("resize", alignWindowBackground);
  </script>
