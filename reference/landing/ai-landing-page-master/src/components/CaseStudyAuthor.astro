---
export interface Props {
  author: {
    name: string;
    avatar: string;
    bio: string;
  };
}

const { author } = Astro.props;
---

<section class="bg-[#F9F7F5] py-16 lg:py-24">
  <div class="px-4 sm:px-8 lg:px-16 xl:px-[165px]">
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col sm:flex-row gap-6 lg:gap-8 items-start">
        <!-- Author Avatar -->
        <div class="flex-shrink-0">
          <img 
            src={author.avatar} 
            alt={author.name}
            class="w-20 h-20 lg:w-[86px] lg:h-[86px] rounded-full object-cover"
          />
        </div>
        
        <!-- Author Bio -->
        <div class="flex-1">
          <div class="text-lg sm:text-xl lg:text-[22px] text-[#16110F] leading-[135%] lg:leading-[27.50px]">
            <span class="font-black">{author.name}</span><span class="font-normal">, {author.bio}</span>
          </div>
        </div>
      </div>
      
      <!-- Social Links -->
      <div class="flex gap-3 mt-8 lg:mt-12">
        <button class="w-11 h-11 lg:w-[45px] lg:h-[45px] rounded-full border border-[#1E1E1E] flex items-center justify-center hover:bg-gray-100 transition-colors">
          <svg class="w-5 h-5 fill-[#1E1E1E]" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </button>
        <button class="w-11 h-11 lg:w-[45px] lg:h-[45px] rounded-full border border-[#1E1E1E] flex items-center justify-center hover:bg-gray-100 transition-colors">
          <svg class="w-5 h-5 fill-[#1E1E1E]" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </button>
        <button class="w-11 h-11 lg:w-[45px] lg:h-[45px] rounded-full border border-[#1E1E1E] flex items-center justify-center hover:bg-gray-100 transition-colors">
          <svg class="w-5 h-5 fill-[#1E1E1E]" viewBox="0 0 24 24">
            <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</section>
