---
export interface Props {
  title: string;
  subtitle: string;
  author: {
    name: string;
    avatar: string;
    bio: string;
  };
  publishDate: string;
  readTime: string;
  tags: string[];
}

const { title, subtitle, author, publishDate, readTime, tags } = Astro.props;
---

<section class="relative bg-[#231A17] text-white">
  <!-- Sparq Logo/Brand in upper left -->
  <div
    class="relative z-10 max-w-28/32 lg:max-w-22/32 2xl:max-w-24/32 3xl:max-w-24/32 mx-auto px-4 py-8"
  >
    <a href="/" class="inline-block">
      <h1
        class="font-display text-xl md:text-2xl lg:text-3xl xl:text-4xl font-black text-[#F9F7F5] leading-[90%] tracking-[-1.297px] hover:opacity-80 transition-opacity"
      >
        Sparq
      </h1>
    </a>
  </div>

  <!-- Spacer between logo and content -->
  <div class="h-16 sm:h-20 md:h-24 lg:h-32 xl:h-40"></div>

  <!-- Main content -->
  <div
    class="relative z-10 max-w-28/32 lg:max-w-22/32 2xl:max-w-24/32 3xl:max-w-24/32 mx-auto px-4 pb-16"
  >
    <div class="w-full">
      <!-- Main Headline -->
      <div class="mb-8">
        <h2
          class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-[67.42px] font-black text-[#F9F7F5] leading-[100%] lg:leading-[77.54px] mb-8 max-w-4xl"
        >
          {title}
        </h2>

        <!-- Divider line -->
        <div class="w-full mb-8">
          <div class="h-px bg-white/50"></div>
        </div>

        <!-- Subtitle and Tags Row -->
        <div
          class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6 mb-8"
        >
          <!-- Left: Subtitle -->
          <div class="flex-1">
            <p
              class="text-base sm:text-lg md:text-xl lg:text-[20.60px] font-medium text-[#F9F7F5] leading-[130%] lg:leading-[30.90px] max-w-2xl"
            >
              {subtitle}
            </p>
          </div>

          <!-- Right: Tags and Social buttons -->
          <div class="flex flex-col gap-4">
            <!-- Tags -->
            <div class="flex flex-wrap gap-2">
              {
                tags.map((tag) => (
                  <span class="px-3 py-2 bg-[#B8F0A1] text-[#16110F] text-sm font-bold uppercase rounded border-radius-[3.75px] tracking-wide">
                    {tag}
                  </span>
                ))
              }
            </div>

            <!-- Social sharing buttons -->
            <!-- <div class="flex gap-3">
              <button class="w-10 h-10 rounded-full border border-white/20 flex items-center justify-center hover:bg-white/10 transition-colors">
